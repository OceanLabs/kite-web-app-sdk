{
    "compilerOptions": {
        "outDir": "./example/dist/",
        "sourceMap": true,
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "declaration": false,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "types": [
            "node"
        ],
        "lib": [
            "es5",
            "es2017",
            "dom"
        ],
        "target": "es5"
    },
    "include": [
        "example/src/**/*",
        "src/**/*"
    ],
    "exclude": [
        "**/*.spec.ts",
        "index.d.ts"
    ]
}
